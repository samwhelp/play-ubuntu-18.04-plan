################################################################################
## Head: Workspace
##

# focus the next/previous desktop in the current monitor
alt + {a, s}
	bspc desktop -f {prev, next}.local

alt + {h, l}
	bspc desktop -f {prev, next}.local

alt + bracket{left, right}
	bspc desktop -f {prev, next}.local

# focus the last desktop
alt + z
	bspc desktop -f last

# to desktop
alt + {1-9, 0}
	bspc desktop -f '^{1-9, 10}'

# send node to desktop
super + {1-9, 0}
	bspc node -d '^{1-9, 10}'

# send node to desktop
#alt + super + {1-9, 0}
#	bspc node -d '^{1-9, 10}'

# send node to desktop
#alt + shift + {1-9, 0}
#	bspc node -d '^{1-9, 10}'



## Arrow key
#alt + {Left, Right}
#	bspc desktop -f {prev, next}.local


##
## Tail: Workspace
################################################################################




################################################################################
## Head: Preselect
##


#
# preselect
#

# preselect the direction
super + alt + {k, j, h, l}
	bspc node -p {north, south, west, east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + alt + m
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + n
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


##
## Tail: Preselect
################################################################################


################################################################################
## Head: Window / Focus
##

# focus the last node
super + z
	bspc node -f last

# focus the next/previous node in the current desktop
super + {a, s}
	bspc node -f {prev, next}.local.!hidden.window

# focus the node in the given direction
super + {k, j, h, l}
	bspc node -f {north, south, west, east}

#super + bracket{left, right}
#	bspc node -f {prev, next}.local.!hidden.window


# focus the node for the given path jump
super + {p, b, comma, period}
	bspc node -f @{parent, brother, first, second}

# focus the older or newer node in the focus history
super + bracket{left, right}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on


##
## Tail: Window / Focus
################################################################################


################################################################################
## Head: Window / Swap
##

super + shift + {a, s}
	bspc node -s {prev, next}.local.!hidden.window

super + shift + {k, j, h, l}
	bspc node -s {north, south, west, east}

# swap the current node and the biggest node
super + shift + m
	bspc node -s biggest

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + shift + g
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

##
## Tail: Window / Swap
################################################################################


################################################################################
## Head: Window
##

#
# state/flags
#

# set the window state
super + {t, v, f}
	bspc node -t {tiled, pseudo_tiled, fullscreen}

super + n
	bspc node -t "~"{floating, tiled}

# set the node flags
super + ctrl + {a, s, z}
	bspc node -g {locked, sticky, private}

##
## Tail: Window
################################################################################


################################################################################
## Head: Window / Close
##

# close and kill
super + q
	bspc node -c

super + shift + q
	bspc node -k

#alt + shift + q
#	bspc node -c

#alt + F4
#	bspc node -c

##
## Tail: Window / Close
################################################################################


################################################################################
## Head: Window / Resize
##

## [k,j,h,l]
# control bottom(k,j) and right(h,l)
super + ctrl + {k, j, h, l}
	bspc node -z {bottom 0 -20, bottom 0 20, right -20 0, right 20 0}

# control top(k,j) and left(h,l)
super + ctrl + {i, u, y, o}
	bspc node -z {top 0 -20, top 0 20, left -20 0, left 20 0}


## [Up, Down, Left, Right]
# control bottom(Up,Down) and right(Left,Right)
super + ctrl + {Up, Down, Left, Right}
	bspc node -z {bottom 0 -20, bottom 0 20, right -20 0, right 20 0}

# control top(Up,Down) and left(Left,Right)
super + shift + {Up, Down, Left, Right}
	bspc node -z {top 0 -20, top 0 20, left -20 0, left 20 0}


##
## Tail: Window / Resize
################################################################################


################################################################################
## Head: Window / Move
##

## [k, j, h, l]
# move a floating window
#super + shift + {h, j, k, l}
#	bspc node -v {-20 0, 0 20, 0 -20, 20 0}


## [Up, Down, Left, Right]
# move a floating window
super + {Left, Down, Up, Right}
	bspc node -v {-20 0, 0 20, 0 -20, 20 0}

##
## Tail: Window / Move
################################################################################




